<h3 class="text-muted text-center">Inicio de sesión</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, input_html: { autofocus: true } %>
    <%= f.input :password %>
    <%= f.input :remember_me, as: :boolean, label: false,
      inline_label: true if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Ingresar', class: 'btn btn-primary' %>
  </div>

  <br />

  <%= link_to(
    '¿Olvidaste tu contraseña?', new_password_path(resource_name)
  ) %>
<% end %>
