<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, input_html: { autofocus: true, class: 'span3' } %>
    <%= f.input :password, input_html: { class: 'span3' } %>
    <%= f.input :remember_me, as: :boolean, wrapper: :checkbox if devise_mapping.rememberable? %>

    <%= render partial: 'shared/hidden_submit', locals: { f: f } %>
    <%= link_to('Ingresar', '#', class: 'btn btn-primary submit') %>
  </div>
<% end %>

<% if devise_mapping.recoverable? %>
  <div class="readonly-data">
    <p>
      <strong>Ayuda</strong>:
