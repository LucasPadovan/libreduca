<% if @votes.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Vote.human_attribute_name 'vote_flag' %></th>
            <th><%= Vote.human_attribute_name 'user' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @votes.each do |vote| %>
            <tr>
              <td><%= vote.vote_flag %></td>
              <td><%= vote.user %></td>
              <td><%= link_to_show vote %></td>
              <td><%= link_to_edit edit_vote_path(vote) if can? :update, vote %></td>
              <td><%= link_to_destroy vote if can? :destroy, vote %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@votes) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.votes.new', default: :'label.new'),
    new_vote_path, class: 'btn btn-primary'
  ) if can? :create, Vote %>
</div>
