<% active = controller_name == 'news' && action_name == 'index' %>
<div class="navbar navbar-default">
  <div class="navbar-header">
    <ul class="nav navbar-nav">
      <li <%= raw 'class="active"' if active && @news.current_page == 1 %>>
        <%= link_to(
          t('view.news.news', institution: current_institution.to_s),
          news_index_path
        ) %>
      </li>
      <% if current_institution.news.count > News.per_page %>
        <li <%= raw 'class="active"' if active && @news.current_page == 2 %>>
          <%= link_to t('view.news.previous_news'), news_index_path(page: 2) %>
        </li>
      <% end %>
    </ul>
    <% unless user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t('menu.actions.login') %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= render template: 'devise/sessions/new_miniform' %></li>
          </ul>
        </li>
      </ul>
    <% end %>
  </div>
</div>

<% unless user_signed_in? %>
<div class="alert alert-warning text-center">
  <span>
    Para ver imagenes y comentar haga click en <span class="badge">Ingresar</span>
  </span>
</div>
<% end %>
