<% if @news.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= News.human_attribute_name 'title' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @news.each do |news| %>
            <tr>
              <td><%= news.title %></td>
              <td><%= link_to_show news %></td>
              <td><%= link_to_edit edit_news_path(news) if can? :update, news %></td>
              <td><%= link_to_destroy news if can? :destroy, news %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@news) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.news.new', default: :'label.new'),
    new_news_path, class: 'btn btn-primary'
  ) if can? :create, News %>
</div>
