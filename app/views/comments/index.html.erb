<% if @comments.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <%= render @comments %>
    </div>
  </div>

  <%= pagination_links(@comments) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.comments.new', default: :'label.new'),
    new_polymorphic_path([@commentable, Comment]), class: 'btn btn-primary'
  ) if can? :create, @commentable.comments.build %>
</div>
