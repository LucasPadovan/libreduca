<% if @replies.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @replies.each do |reply| %>
            <tr>
              <td><%= link_to_show [@question, reply] %></td>
              <td><%= link_to_edit edit_question_reply_path(@question, reply) if can? :update, reply %></td>
              <td><%= link_to_destroy [@question, reply] if can? :destroy, reply %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@replies) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.replies.new', default: :'label.new'),
    new_question_reply_path(@question), class: 'btn btn-primary'
  ) if can? :create, Reply %>
</div>
