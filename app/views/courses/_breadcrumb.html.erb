<ul class="breadcrumb">
  <li>
    <%= link_to_if can?(:read, @grade.school), @grade.school.to_s, @grade.school %>
    <span class="divider">/</span>
  </li>
  <li>
    <%= link_to_if can?(:read, @grade), @grade.to_s, [@grade.school, @grade] %>
    <% unless @course.new_record? %>
      <span class="divider">/</span>
    <% end %>
  </li>
  <% unless @course.new_record? %>
    <li class="active"><%= @course %></li>
  <% end %>
</ul>