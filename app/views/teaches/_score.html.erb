<% id = dynamic_object_id('score', f) %>
<div class="row-fluid score">
  <div class="span4">
    <strong><%= f.object.user %></strong>
    <%= f.input :user_id, as: :hidden %>
  </div>
  <div class="span2">
    <%= f.input :score, label: false, input_html: {
      min: 0, max: 100, placeholder: Score.human_attribute_name('score')
    } %>
  </div>
  <div class="span2">
    <%= f.input :multiplier, label: false, input_html: {
      min: 0, max: 999.99, placeholder: Score.human_attribute_name('multiplier')
    } %>
  </div>
  <div class="span4">
    <%= f.input :description, label: false, input_html: {
      maxlength: 255, placeholder: Score.human_attribute_name('description')
    } %>
    <%= f.input :id, as: :hidden %>
    <%= f.input :lock_version, as: :hidden %>
  </div>
</div>