<div class="modal fade" id="email_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          &times;
        </button>
        <h3 class="modal-title">
          <%= t('view.teaches.email_scores.header.html') %>
        </h3>
      </div>
      <div class="modal-body">
        <p>
          <%= t('view.teaches.email_scores.body.html', course: course) %>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <%= t('label.close') %>
        </button>
        <%= link_to(
          t('label.send'),
          send_email_summary_teach_path(teach, format: :html),
          class: 'btn btn-primary send_email_summary', method: :post, remote: true,
          data: {
            'loading-text' => t('label.sending'), 'complete-text' => t('label.sent')
          }
        ) %>
      </div>
    </div>
  </div>
</div>
