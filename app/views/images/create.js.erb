<% if @image.persisted? %>
  $('#new_image').replaceWith('<%= j render('images/image_show', :image => @image) %>');
  $("#<%= @image.anchor %>").effect('highlight', 'slow').after(
    '<%= j render(template: 'images/new', format: :html, locals: { :@image => Image.new }) %>'
  );
  $('#image_name').focus();
<% else %>
  $('#new_image').replaceWith('<%= j render(template: 'images/new', format: :html) %>');
<% end %>
