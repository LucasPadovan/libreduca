<%= simple_form_for([@user, @job], defaults: { input_html: { class: 'span5' } }) do |f| %>
<% if user_not_in_institution? && editing_user? %>
  <div class="alert alert-info">
    <%= t('view.users.edit_on_new_institution') %>
  </div>
<% end %>

<div class="row">
  <div class="span6">
    <div class="row-fluid form-inputs">
      <div class="span12">
        <h5><%= User.human_attribute_name 'jobs', count: @user.jobs.size %></h5>
      </div>

      <div class="row-fluid">
        <div id="jobs" class="span12">
          <%= render partial: 'jobs/job', locals: { f: f } %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="form-actions">
  <div class="pull-right"><%= yield :form_actions %></div>
  <%= f.input :lock_version, as: :hidden %>
  <%= f.button :submit, class: 'btn-primary' %>
</div>
<% end %>