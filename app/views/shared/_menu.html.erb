<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="iconic">&#xe055;</span>
      </a>

      <%= link_to t('app_name'), root_path, class: 'brand' %>

      <% if user_signed_in? %>
        <div class="nav-collapse">
          <ul class="nav">
            <%= render 'shared/menu_dropdowns/institutions' if current_user.institutions.count > 1 %>
            <%= show_menu_link(
              name: 'dashboard', controllers: 'dashboard', path: dashboard_path
            ) if current_institution %>
            <%= render 'shared/menu_dropdowns/enrollments' if current_enrollments.present? %>
            <%= show_menu_link(
              name: 'users', controllers: 'users', path: users_path
            ) if can?(:read, User) && current_user.is?(:admin) && !current_institution %>
            <%= show_menu_link(
              name: 'regions', controllers: 'regions', path: regions_path
            ) if can?(:read, Region) && !current_institution %>
            <%= show_menu_link(
              name: 'institutions', path: institutions_path,
              controllers: ['institutions', 'grades', 'courses', 'teaches', 'scores']
            ) if can?(:read, Institution) && !current_institution %>
          </ul>
          <%= render partial: 'shared/nav_search' %>
          <ul class="nav pull-right">
            <li>
              <%= link_to(
                current_user.email, edit_profile_user_path(current_user),
                title: t('view.users.edit_profile'),
                data: { 'show-tooltip' => true, 'placement' => 'bottom' }
              ) %>
            </li>
            <li>
              <%= link_to(
                '&#x2192;'.html_safe, destroy_user_session_path,
                title: t('menu.actions.logout'), class: 'iconic', id: 'logout',
                method: :delete,
                data: { 'show-tooltip' => true, 'placement' => 'bottom' }
              ) %>
            </li>
          </ul>
        </div>
      <% else %>
        <div class="nav-collapse">
          <ul class="nav pull-right">
            <li class="dropdown">
              <% if upper_login_button? %>
                <%= link_to('#', class: 'dropdown-toggle fix-corners', data: { toggle: "dropdown"} ) do %>
                  Ingresar <strong class="caret"></strong>
                <% end %>
                  <div class="dropdown-menu">
                  <%= render file: "devise/sessions/new_miniform", :locals => {:resource => resource} %>
                  </div>
              <% end %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
