<%= simple_form_for([@content, @homework, @presentation],
  html: { id: nil }, defaults: { input_html: { id: nil } }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-inputs">
        <%= f.input :file, disabled: !current_user_is_student?,
          input_html: {
          id: "presentation_file_#{@homework.to_param}",
          data: { 'fileupload' => true, 'fileupload-autosubmit' => true }
        } %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'shared/template_upload' %>
