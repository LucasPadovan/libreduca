<fieldset class="row">
  <div class="col-md-3">
    <%= f.input :name, label: false, input_html: {
      autofocus: true, placeholder: Homework.human_attribute_name('name')
    } %>
  </div>
  <div class="col-md-3">
    <%= f.input :closing_at, as: :date_picker, label: false, input_html: {
      placeholder: Homework.human_attribute_name('closing_at')
    } %>
  </div>
  <div class="col-md-4">
    <%= f.input :description, label: false, input_html: {
      rows: 3, placeholder: Homework.human_attribute_name('description')
    } %>
  </div>
  <div class="col-md-2 nested-actions">
    <%= f.input :id, as: :hidden %>
    <%= f.input :lock_version, as: :hidden %>
    <%= link_to_remove_nested_item(f) %>
  </div>
</fieldset>
