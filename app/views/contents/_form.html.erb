<%= simple_form_for([@teach, @content], defaults: { input_html: { class: 'span11' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { autofocus: true } %>
    <%= f.input :content, input_html: { rows: 10 } %>
    
    <% document = @content.documents.detect(&:new_record?) || @content.documents.build %>
    <%= f.simple_fields_for :documents, document do |df| %>
      <div class="row-fluid">
        <div class="span6">
          <%= df.input :name %>
        </div>
        <div class="span6">
          <%= df.input :file, hint: document_file_identifier(df.object) %>
          <%= df.input :file_cache, as: :hidden %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.input :lock_version, as: :hidden %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
