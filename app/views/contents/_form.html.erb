<%= simple_form_for([@teach, @content], defaults: { input_html: { class: 'span11' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { autofocus: true } %>
    <%= f.input :content, input_html: { rows: 10 }, hint: t(
      'view.contents.markdown_help.html',
      link: link_to('markdown', '#markdown-help', data: { toggle: 'modal' })
    ) %>

    <hr />

    <div id="surveys">
      <%= f.simple_fields_for :surveys do |sf| %>
        <%= render partial: 'survey', locals: { f: sf } %>
      <% end %>

      <%= link_to_add_fields t('view.contents.surveys.new'), f, :surveys %>
    </div>

    <hr />

    <div id="documents">
      <%= f.simple_fields_for :documents do |df| %>
        <%= render partial: 'document', locals: { f: df } %>
      <% end %>

      <%= link_to_add_fields t('view.contents.new_document'), f, :documents %>
    </div>
  </div>

  <div class="form-actions">
    <div class="pull-right"><%= yield :form_actions %></div>
    <%= f.input :lock_version, as: :hidden %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
<%= render 'help/markdown_inline' %>
