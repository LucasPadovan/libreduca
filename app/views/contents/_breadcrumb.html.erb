<ul class="breadcrumb">
  <li>
    <%= link_to_if can?(:read, @teach.school), @teach.school.to_s, @teach.school %>
    <span class="divider">/</span>
  </li>
  <li>
    <%= link_to_if can?(:read, @teach.grade), @teach.grade.to_s, [@teach.school, @teach.grade] %>
    <span class="divider">/</span>
  </li>
  <li>
    <%= link_to_if can?(:read, @teach.course), @teach.course.to_s, [@teach.grade, @teach.course] %>
    <span class="divider">/</span>
  </li>
  <li>
    <%= link_to_if can?(:read, @teach), @teach.to_s, [@teach.course, @teach] %>
    <% unless @content.new_record? %>
      <span class="divider">/</span>
    <% end %>
  </li>

  <% unless @content.new_record? %>
    <li class="active"><%= @content %></li>
  <% end %>
</ul>
