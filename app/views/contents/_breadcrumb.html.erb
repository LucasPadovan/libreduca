<ul class="breadcrumb">
  <li>
    <%= link_to_if(
      can?(:read, @teach.institution) && !current_user_is_student?,
      @teach.institution.to_s, @teach.institution
    ) %>
  </li>
  <li>
    <%= link_to_if(
      can?(:read, @teach.grade), @teach.grade.to_s,
      [@teach.institution, @teach.grade]
    ) %>
  </li>
  <li>
    <%= link_to_if(
      can?(:read, @teach.course), @teach.course.to_s,
      [@teach.grade, @teach.course]
    ) %>
  </li>
  <li>
    <%= link_to_if can?(:read, @teach), @teach.to_s, @teach %>
  </li>

  <% unless @content.new_record? %>
    <li class="active"><%= @content %></li>
  <% end %>
</ul>
