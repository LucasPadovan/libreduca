<div class="readonly_data">
  <h2><%= @user %></h2>

  <p>
    <%= mail_to @user.email %>
  </p>

  <% unless @user.roles.empty? %>
    <h3><%= User.human_attribute_name 'roles', count: @user.roles.size %></h3>
    <ul>
      <% @user.roles.each do |role| %>
        <li><%= t("view.users.roles.#{role}") %></li>
      <% end %>
    </ul>
  <% end %>
    
  <% unless @user.jobs.empty? %>
    <h3><%= User.human_attribute_name 'jobs', count: @user.jobs.size %></h3>
    <ul>
      <% @user.jobs.each do |job| %>
        <li>
          <%= t(
            'view.users.job_role.html',
            school: link_to(job.school.name, job.school),
            role: show_human_job_type(job.job)
          ) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<nav class="form-actions">
  <%= link_to t('label.edit'), edit_user_path(@user), class: 'btn btn-primary' %>
  <div class="pull-right">
    <%= link_to t('label.list'), users_path %>
  </div>
</nav>