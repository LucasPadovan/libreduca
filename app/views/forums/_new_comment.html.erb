<% url = comments_institution_forum_path(@institution, @forum, comment, format: :html) %>
<%= simple_form_for comment, url: url, remote: true do |f| %>
  <%= f.input :comment, label: false, input_html: {
    rows: 5, class: 'span11',
    placeholder: Comment.human_attribute_name('comment')
  } %>

  <%= f.button :submit %>
<% end %>
