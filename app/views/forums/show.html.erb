<div class="readonly-data">
  <div class="page-header">
    <h1>
      <%= @forum %>
    </h1>
      <p>
        <%= t(
          'view.forums.created_by.html',
          user: @forum.user.to_s,
          distance_time: distance_of_time_in_words_to_now(@forum.created_at) 
        ) %>
      </p>
  </div>

  <blockquote>
    <%= markdown @forum.topic %>
  </blockquote>
</div>

<div class="form-actions">
  <%= link_to t('label.edit'), edit_polymorphic_path([@school, @forum]) if can? :update, @forum %> |
  <%= link_to t('label.list'), polymorphic_path([@school, Forum]) %>
</div>
